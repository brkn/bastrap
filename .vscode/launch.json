{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "mix_task",
          "name": "mix test (focused)",
          "request": "launch",
          "task": "test",
          "taskArgs": [
              "--warnings-as-errors=false",
              "--only",
              "focus"
          ],
          "startApps": true,
          "projectDir": "${workspaceRoot}",
          "requireFiles": [
              "test/**/test_helper.exs",
              "test/**/*_test.exs"
          ]
      }
  ]
}
